{
  "name": "jv-backend",
  "version": "1.0.0",
  "description": "A REST-API for JV Mobile application",
  "main": "index.js",
  "scripts": {
    "start": "cross-env node src/index.js",
    "dev": "NODE_ENV=development nodemon src/index.js",
    "lint": "eslint '**/*.js' --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "test": "cross-env NODE_ENV=testing jest --forceExit --detectOpenHandles --coverage --coverageDirectory=coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/naeemark/jv-backend.git"
  },
  "keywords": [
    "React",
    "Express",
    "NodeJS",
    "Jest",
    "Jest-extended"
  ],
  "author": "Naeem",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/naeemark/jv-backend/issues"
  },
  "homepage": "https://github.com/naeemark/jv-backend",
  "_moduleAliases": {
    "@app": "src",
    "@api": "src/api",
    "@config": "src/config",
    "@middlewares": "src/middlewares",
    "@models": "src/models",
    "@services": "src/services",
    "@utils": "src/utils"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.1",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "crypto-js": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "dynamoose": "^2.7.0",
    "es-class": "^2.1.1",
    "express": "^4.17.1",
    "express-interceptor": "^1.2.0",
    "express-validation": "^1.0.3",
    "http-status": "^1.4.2",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "node-gyp": "^6.0.1",
    "node-sanitizer": "^1.0.5",
    "rebuild": "^0.1.2",
    "response-time": "^2.3.2",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.3.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "eslint": "^7.5.0",
    "eslint-config-astro": "^1.0.8",
    "eslint-import-resolver-module-alias": "^0.1.0",
    "eslint-plugin-import": "^2.22.0",    
    "jest": "^24.9.0",
    "jest-dom": "^4.0.0",
    "jest-express": "^1.10.1",
    "jest-extended": "^0.11.2",
    "jest-tobetype": "^1.2.3",
    "mock-express-request": "^0.2.2",
    "mock-express-response": "^0.2.2",    
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "moduleNameMapper": {
      "^@app(.*)$": "<rootDir>/src$1",
      "^@boot(.*)$": "<rootDir>/src/boot$1",
      "^@config(.*)$": "<rootDir>/src/config$1",
      "^@api(.*)$": "<rootDir>/src/api$1",
      "^@middlewares(.*)$": "<rootDir>/src/middlewares$1",
      "^@models(.*)$": "<rootDir>/src/models$1",
      "^@services(.*)$": "<rootDir>/src/services$1",
      "^@utils(.*)$": "<rootDir>/src/utils$1",
      "^@repos(.*)$": "<rootDir>/src/repository$1"
    },
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node"
  }
}
